{
  "manifest_version": 3,
  "name": "Movie Chat Companion",
  "version": "1.0.0",
  "description": "Chat with friends while watching movies together! Perfect for long-distance movie nights with real-time messaging and stream-style popup notifications.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Movie Chat Companion"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/movie-chat-companion",
  "offline_enabled": false,
  "minimum_chrome_version": "88"
}
